<Window x:Class="ATMS_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
            <Button Content="Poke server" Margin="5" Width="100" Height="25" Click="PokeServer_Click"/>
            <TextBox Name="resultBox" Text="Click above to poke the server" Margin="5" Width="170" Height="25" />
            <Label Content="Server updates" Margin="5, 20, 5, 5"/>
            <TextBox Name="updateBox" Text="Waiting for server updates..." Margin="5" Width="170" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
