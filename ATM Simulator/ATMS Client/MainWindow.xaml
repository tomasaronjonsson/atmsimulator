<Window x:Class="ATMS_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <Label Content="Timestamp of the first Plot:"/>
            <TextBox Name="timestampBox" Margin="5" Width="100" Height="25" HorizontalAlignment="Left"/>
            <Button Content="Create first scenario" Margin="5" Click="FirstScenario_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Orientation="Vertical">
            <Button Content="Poke server" Margin="5" Width="100" Height="25" Click="PokeServer_Click"/>
            <TextBox Name="resultBox" Text="Click above to poke the server" Margin="5" Width="170" Height="25" />
        </StackPanel>
    </Grid>
</Window>
