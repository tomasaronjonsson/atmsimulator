<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
            <Button Content="Register" Click="Button_Click"/>
            <Button Content="Poke server" Click="PokeServer_Click"/>
            <TextBox Name="resultBox" Text="Click above to poke the server" Margin="5" Width="170" Height="25" />
            <TextBox Name="updateBox" Text="Waiting for server updates..." Margin="5" Width="170" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
