<Window x:Class="View.Track_RemoveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remove Track"
        Height="75"
        Width="350"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" 
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel">

    <Window.DataContext>
        <vm:SimulationViewModel/>
    </Window.DataContext>




    <StackPanel Height="25"  Orientation="Horizontal">
        <Label Content="Track ID: "/>
        <TextBox Width="100" Text="{Binding trackID, Mode=TwoWay}"/>

        <Button IsDefault="True" Width="75"
                Command="{Binding RemoveTrack}" Click="OK_Click">OK</Button>
        <Button IsCancel="True" Width="75" Click="Close_Click" >Cancel</Button>
    </StackPanel>
</Window>
