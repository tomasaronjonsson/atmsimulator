<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map"  
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="View.MainWindow" 
        Title="View test panel"
        WindowStartupLocation="CenterScreen"
        >

    <Window.DataContext>
        <vm:SimulationViewModel/>
    </Window.DataContext>

    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="800"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0">
                <Button Content="Create Scenario" Command="{Binding CreateScenario}"/>
                <Button Content="Play Simulation" Command="{Binding PlaySimulation}"/>

                <Label Content="Track:" HorizontalAlignment="Left"/>
                <Button Content="Create new track" Command="{Binding CreateNewTrack}"/>
                
            </StackPanel>

            <Canvas Name="mapcanvas">
                
            </Canvas>

                <dxm:MapControl Grid.Row="0" Grid.Column="1" ZoomLevel="8"  CenterPoint="55.85,9.82">
                <!-- The map itself from oepnstreet -->
                <dxm:ImageTilesLayer Name="mapContainer">
                    
                    
                    <dxm:ImageTilesLayer.DataProvider>
                        <dxm:OpenStreetMapDataProvider/>
                    </dxm:ImageTilesLayer.DataProvider>
                </dxm:ImageTilesLayer>
                <!-- Plotslist-->
                <dxm:VectorLayer ItemsSource="{Binding planes}" />
                <!-- History -->
                <dxm:VectorLayer ItemsSource="{Binding historyPlanes}" />
            </dxm:MapControl>

           <!--
            DEBUG List of plots
            <ListBox Grid.Row="0" Grid.Column="2" ItemsSource="{Binding plots}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ''}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>-->
            <ListBox Grid.Row="0" Grid.Column="2" ItemsSource="{Binding tracks}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ''}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Slider  Width="400" Value="{Binding viewModelCurrentTime , Mode=TwoWay}" Orientation="Horizontal" HorizontalAlignment="Left" 
                        IsSnapToTickEnabled="True" Maximum="{Binding serverCurrentTime}" TickPlacement="BottomRight" 
                        AutoToolTipPlacement="BottomRight" TickFrequency="4"
                        AutoToolTipPrecision="2" IsDirectionReversed="False"
                        IsMoveToPointEnabled="False" />

                <CheckBox Content="Sync" IsChecked="{Binding syncTimeWithServer,Mode=TwoWay}" />
                
            </StackPanel>
            
        </Grid>
        <Label Content="{Binding plots.Count}"/>
        

    </StackPanel>

</Window>

