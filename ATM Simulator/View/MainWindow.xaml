<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View test panel" MinHeight="363" MinWidth="500" WindowStartupLocation="CenterScreen"
        Height="363" Width="500"
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel">

    <Window.DataContext>
        <vm:SimulationViewModel />
    </Window.DataContext>

    <StackPanel>
        <StackPanel Height="300" Orientation="Horizontal">
            <StackPanel Width="100" HorizontalAlignment="Left">
                <Button Content="Create Scenario" Command="{Binding CreateScenario}"/>
            </StackPanel>
            <ListBox x:Name="map" Grid.Row="1" BorderThickness="0" ItemsSource="{Binding plots }" MinWidth="390">
                <ListBox.ItemTemplate>
                 <DataTemplate>
                 <TextBlock Text="{Binding ToString}"/>
         </DataTemplate>
       </ListBox.ItemTemplate>
     </ListBox>
        </StackPanel>
    </StackPanel>
</Window>

